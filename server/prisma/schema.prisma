generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email           String           @unique
  password        String
  firstname       String
  lastname        String
  role            String
  createdBids     Bid[] @relation("createdBids")
  activeBids      UserActiveBid[]

  @@map("users")
}

model Bid {
  id              String @id @default(auto()) @map("_id") @db.ObjectId

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  bidCreatorId    String @db.ObjectId
  user            User @relation("createdBids", fields: [bidCreatorId], references: [id])
  currentBidders  UserActiveBid[]

  title           String
  startDate       String
  startTime       String
  endDate         String
  endTime         String
  bidItems        BidItem[]

  winnerUserId String @db.ObjectId @default("")
  winnerName String @default("")
  highestBidPrice String @default("")

  status String @default("active")
  
  @@map("bids")
}

model UserActiveBid {
  id      String @id @default(auto()) @map("_id") @db.ObjectId

  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])

  bidId String @db.ObjectId
  bid Bid @relation(fields: [bidId], references: [id])

  bidAmount Int @default(0)

  @@index([userId, bidId], name: "user_bid_idx")
  @@index([bidId, userId], name: "bid_user_idx")
}

type BidItem {
  title       String
  description String
  price       Int
}
